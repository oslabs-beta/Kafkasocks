{
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "target": "ES5",
        "module": "commonJS",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "preserveConstEnums": true
    },
    "include": [
        "./client/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}